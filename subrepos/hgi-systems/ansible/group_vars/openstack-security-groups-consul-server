openstack_security_group_name: consul-server
openstack_security_group_rules:
  - protocol: tcp # server RPC
    port_range_min: 8300
  - protocol: tcp # serf LAN/WAN
    port_range_min: 8301
    port_range_max: 8302
  - protocol: udp # serf LAN/WAN
    port_range_min: 8301
    port_range_max: 8302
  - protocol: tcp # HTTP API
    port_range_min: 8500
  - protocol: tcp # DNS interface
    port_range_min: 8600
  - protocol: udp # DNS interface
    port_range_min: 8600
  - protocol: tcp # HTTP UI
    port_range_min: 80