[program:chronos]
environment=MESOS_NATIVE_JAVA_LIBRARY="{{ chronos_libmesos_so }}",MESOS_NATIVE_LIBRARY="{{ chronos_libmesos_so }}"
command={{ chronos_java_bin }} -cp {{ chronos_java_cp }} -server -Xmx"{{ chronos_java_heap }}" -Xms"{{ chronos_java_heap }}" -XX:+PrintClassHistogram {{ chronos_java_main }} --master {{ chronos_mesos_zk_uri }} --zk_hosts "{{ chronos_zk_hosts }}" --failover_timeout {{ chronos_failover_timeout_s }} --hostname "{{ chronos_hostname }}" --mesos_role "{{ chronos_mesos_role }}" --http_port {{ chronos_http_port }} --http_credentials "{{ chronos_http_credentials }}" --zk_path "{{ chronos_zk_path }}"
